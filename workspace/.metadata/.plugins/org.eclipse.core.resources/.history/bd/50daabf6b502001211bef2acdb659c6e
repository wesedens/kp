package com.wedens.codes.cb0;

import java.io.BufferedReader;
import java.io.File;
import java.io.FileNotFoundException;
import java.io.FileReader;
import java.io.IOException;

public class CodeBreaker0 {

	/**
	 * @param args
	 */
	public static void main(String[] args) {

		BufferedReader inputStream = null;
		String filename = null;

		if (args.length < 1) {
			System.out.printf("usage: cb0 <filename>\n");
		}

		File f = new File(args[0]);
		try {
			filename = f.getCanonicalPath();
			if (f.exists()) {
				inputStream = new BufferedReader(new FileReader(f));

				String l;
				StringBuilder code = "";
				while ((l = inputStream.readLine()) != null) {
					code.append(l);
					Decrypt.breakCode(code.toString());
				}
			} else {
				System.out.printf("File: %s does not exist\n", filename);
			}
		} catch (FileNotFoundException e) {
			e.printStackTrace();
			System.out.printf("File Not Found: %s\n", filename);
		} catch (IOException e) {
			e.printStackTrace();
			System.out.printf("IOException: %s\n", filename);
		} finally {
			if (inputStream != null) {
				try {
					inputStream.close();
				} catch (IOException e) {
					inputStream = null;
				}
			}
		}
	}
}
